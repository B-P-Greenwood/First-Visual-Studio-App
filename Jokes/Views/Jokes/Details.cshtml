@model Jokes.Models.Joke

@{
    ViewData["Title"] = "Details";
}

<h1>Full Joke</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JokeQuestion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JokeQuestion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JokeAnswer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JokeAnswer)
        </dd>
    </dl>
</div>
<div>
    @if (Model.JokeAuthor == @User.Identity?.Name) {
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a><span> | </span>
     }
    <a asp-action="Index">Back to List</a>
</div>
